<Window x:Class="RestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RestClient.View"
        Title="Rest Client" Height="350" Width="525" Icon="Rest.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <local:SideBar Grid.Column="0" />
        <GridSplitter HorizontalAlignment="Stretch" Width="5" Grid.Column="1" />
        <local:RequestBuilder Grid.Column="2" />
    </Grid>
</Window>
